{
  "manifest_version": 3,
  "name": "Canvas Scraper Lite",
  "version": "1.0",
  "description": "Scrapes Canvas overview and assignments on button click.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Canvas Scraper"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://canvas.kth.se/*",
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["scrapeAssignments.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
